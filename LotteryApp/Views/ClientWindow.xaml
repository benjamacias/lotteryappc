<Window x:Class="LotteryApp.Views.ClientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Cliente" Height="340" Width="420" WindowStartupLocation="CenterOwner">
  <Grid Margin="16">
    <Grid.RowDefinitions>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <StackPanel Margin="0,0,0,12">
      <TextBox x:Name="NameBox" Margin="0,0,0,8" materialDesign:HintAssist.Hint="Nombre"/>
      <TextBox x:Name="DocBox" Margin="0,0,0,8" materialDesign:HintAssist.Hint="Documento"/>
      <TextBox x:Name="PhoneBox" Margin="0,0,0,8" materialDesign:HintAssist.Hint="Teléfono"/>
      <TextBox x:Name="AddressBox" Margin="0,0,0,8" materialDesign:HintAssist.Hint="Dirección"/>
    </StackPanel>

    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
      <Button Content="Cancelar" IsCancel="True" Margin="0,0,8,0"/>
      <Button Content="Guardar" IsDefault="True" Click="Save_Click"/>
    </StackPanel>
  </Grid>
</Window>
